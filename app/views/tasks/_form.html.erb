<%= form_for :task,
             url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-sm-6">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :date, 'Date' %>
            <%= f.date_field :date, min: Date.today, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :user, 'Staff' %>
            <%= f.select :user_id, options_from_collection_for_select(staffs, :id, :email), {} , { class: 'ui fluid  selection dropdown form-control', required: true } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :note, 'Note' %>
            <%= f.text_area :note, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :product_id, 'Product' %>
            <%= f.select :product_id, options_from_collection_for_select(Product.all, :id, :name), class: 'form-control'
            %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :quantity, 'Quantity' %>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">/</span>
              </div>
              <%= f.number_field :quantity, min: 0, class: 'form-control', required: true %>
            </div>
          </div>
        </div>
      </div>

      <%= f.hidden_field :admin_id, value: current_admin.id %>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <%= f.submit 'Save', class: 'btn btn-primary form-control' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
