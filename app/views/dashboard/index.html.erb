<div class="container-fluid">
  <h1 class="text-center">
    List Users
  </h1>

  <div class="row">
    <div class="col-10"></div>
    <div class="col-2">
      <%= link_to 'Create', new_user_registration_path, class: 'btn btn-primary form-control' %>
    </div>
  </div>

  <table class="table table-striped" style="margin-top: 30px">
    <thead>
      <tr>
        <th width="5%" scope="col">#</th>
        <th width="45%" scope="col">Email</th>
        <th width="45%" scope="col">Phone Number</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each.with_index(1) do |user, idx| %>
        <tr>
          <th width="5%" scope="row"><%= idx %></th>
          <td width="45%"><%= user.email %></td>
          <td width="45%"><%= user.phone_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

